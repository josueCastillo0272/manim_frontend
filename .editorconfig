# top-level
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++
[*.{c,cc,cxx,cpp,h,hpp,hxx,inl,ipp}]
indent_size = 4
tab_width = 4
max_line_length = 120

# CMake
[{CMakeLists.txt,*.cmake}]
indent_size = 2

# Python (for tooling, scripts later)
[*.py]
indent_size = 4

# JSON / YAML / TOML
[*.{json,yml,yaml,toml}]
indent_size = 2

# Markdown / text (donâ€™t strip trailing spaces; they can matter)
[*.{md,markdown,txt}]
trim_trailing_whitespace = false
indent_size = 2

# Makefiles use tabs
[Makefile]
indent_style = tab
